# Define Bun version - must match the one used for the base image
ARG BUN_VERSION=1.2

# Use the pre-built backend base image containing all source and node_modules
FROM graphcap-backend-base:dev

# Set working directory to datamodel package
WORKDIR /app/packages/datamodel

RUN chmod +x ./entrypoint.sh

# Expose the Drizzle Studio port
EXPOSE 53151

# Use the entrypoint script
ENTRYPOINT ["./entrypoint.sh"] 