{
  "name": "graphcap-data-service",
  "version": "1.0.0",
  "description": "Data access service for GraphCap using Drizzle ORM with Hono and Bun",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "dev": "bun --hot src/index.ts",
    "migrate": "drizzle-kit migrate",
    "generate": "drizzle-kit generate",
    "studio": "drizzle-kit studio --port 32501",
    "seed": "bun run src/db/seed/index.ts",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "test": "bun test"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-openapi": "^0.18.4",
    "@libsql/client": "^0.14.0",
    "@scalar/hono-api-reference": "^0.5.184",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.7.4",
    "hono-pino": "^0.7.2",
    "pg": "^8.14.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "stoker": "1.4.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.2",
    "@graphcap/datamodel": "workspace:*",
    "@graphcap/lib": "workspace:*"
  },
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@types/crypto-js": "^4.2.2",
    "@antfu/eslint-config": "^3.16.0",
    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.0",
    "bun-types": "latest",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.22.0",
    "eslint-plugin-format": "^0.1.3",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^2.1.9"
  }
}